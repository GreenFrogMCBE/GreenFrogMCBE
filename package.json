{
  "name": "greenfrog",
  "description": "A server software for MCBE",
  "main": "index.js",
  "author": "GreenFrogMCBE",
  "license": "CC-BY-4.0",
  "scripts": {
    "format": "npx prettier --write .",
    "start": "node index.js",
    "dev": "nodemon --signal SIGINT index.js --debug",
    "generate-license-headers": "node tools/generate-license-headers.js",
